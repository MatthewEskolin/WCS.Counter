@model dynamic

@{
    ViewBag.Title = "WCS Counter";
}

<h2>WCS Beats Counter (with 6 and 8 count Patterns)</h2>


<div class="content">

    <div id="controls">
        <div><input type="button" onclick="play(this); return false;" value="Play" /></div>
        <div id="tempoBox">Tempo: <span id="showTempo">120</span>BPM <input id="tempo" type="range" min="30.0" max="160.0" step="1" value="120" style="height: 20px; width: 200px" onInput="tempo = event.target.value; document.getElementById('showTempo').innerText=tempo;"></div>
        <div>Resolution:<select onchange="noteResolution = this.selectedIndex;"><option>16th notes<option>8th notes<option>Quarter notes</select></div>

    </div>
        <div>Counts</div>
        <table>
            <tr>
                <td>Current 16th Note</td> 
                <td><span id="spnCurrent16th"></span></td>
            </tr>            
            <tr>
                <td>Current 4 Count</td> 
                <td><span id="spnCurrent4"></span></td>
            </tr>            
            
            <tr>
                <td>Current 8 Count</td> 
                <td><span id="spnCurrent8"></span></td>
            </tr>            

        </table>
        

</div>
